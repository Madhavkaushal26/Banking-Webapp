package com.bankapp.banking_system.Service;

import java.util.Date;
import io.jsonwebtoken.SignatureAlgorithm;
import io.jsonwebtoken.security.Keys;
import java.security.Key;
import java.util.Base64;

import org.springframework.stereotype.Service;

import io.jsonwebtoken.Jwts;

@Service
public class JwtService {
	private static final String SECRET_KEY = "your-secret-key-must-be-at-least-32-characters-long"; 

    private static final Key key = Keys.hmacShaKeyFor(Base64.getDecoder().decode(SECRET_KEY));

    public String generateToken(String subject) {
        return Jwts.builder()
                .setSubject(subject)
                .signWith(key)  // âœ… Updated method
                .compact();
    }
}
